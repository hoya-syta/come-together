<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%# 「モデル名」にはUserモデルであれば@userを渡しましょう。%>
        <%# 「新規登録機能へのパス」は、devise導入後にrails routesを実行してdevise/registrations#createへのパスを確認し、記載してください。 %>
        <%= form_with model: @user, url:  user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, id:"nickname", placeholder:"例) レノン・マッカートニー" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, id:"email", placeholder:"PC・携帯どちらでも可" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, id:"password", placeholder:"6文字以上" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認)" %><br />
          <%= f.password_field :password_confirmation, id:"password-confirmation", placeholder:"同じパスワードを入力して下さい"  %>
        </div>

         <div class="field">
          <%= f.label :name, "名前(全角)" %><br />
          <%= f.text_field :last_name,  id:"last-name", placeholder:"例) 小野" %>
          <%= f.text_field :first_name, id:"first-name", placeholder:"例) 太郎" %>
        </div>

        
        <div class="field">
          <%= f.label :name_kana, "名前フリガナ(全角)" %><br />
          <%= f.text_field :last_name_kana,  id:"last-name-kana", placeholder:"例) オノ" %>
          <%= f.text_field :first_name_kana,  id:"first-name-kana", placeholder:"例) タロウ" %>
        </div>

        <div class="field">
          <%= f.label :birthday, "生年月日" %><br />
          <div class='input-birth-wrap'>
            <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :age_id, "年齢" %><br />
        </div>

        <div class="field">
          <%= f.label :gender_id, "性別" %><br />
        </div>

        <div class="field">
        <p>お住まい</p>
          <%= f.label :prefecture_id, "都道府県" %><br />
          <%= f.label :city, "住所" %><br />
          <%= f.text_area :city, id:"city" %>
        </div>

         <div class="field">
          <%= f.label :profession_id, "ご職業" %><br />

        </div>

        <div class="field">
          <%= f.label :self_introduction, "自己紹介" %><br />
          <%= f.text_area :self_introduction, id:"self_introduction" %>
        </div>

        
        

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>