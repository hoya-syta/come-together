<div class="wrapper">
    <div class="form__wrapper">
      <h2 class="page-heading">⭐️ユーザー新規登録⭐️</h2>

        <%# 「モデル名」にはUserモデルであれば@userを渡しましょう。%>
        <%# 「新規登録機能へのパス」は、devise導入後にrails routesを実行してdevise/registrations#createへのパスを確認し、記載してください。 %>

        <%= devise_error_messages!%>

          <%= form_with model: @user, url:  user_registration_path, local: true do |f| %>

            <div class="field">
              <%= f.label :nickname, "ニックネーム" %><br />
              <%= f.text_field :nickname, id:"nickname", class:"ip-box", placeholder:"例) レノン・マッカートニー" %>
            </div>

            <div class="field">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, id:"email",  class:"ip-box", placeholder:"PC・携帯どちらでも可" %>
            </div>

            <div class="field">
              <%= f.label :password, "パスワード" %><br />
              <%= f.password_field :password, id:"password",  class:"ip-box", placeholder:"6文字以上の半角英数字" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
              <%= f.password_field :password_confirmation, id:"password-confirmation",  class:"ip-box", placeholder:"同じパスワードを入力して下さい"  %>
            </div>

            <div class="field">
              <%= f.label :name, "名前(全角)" %><br />
              <%= f.text_field :last_name,  id:"last-name", placeholder:"例) 小野" %>
              <%= f.text_field :first_name, id:"first-name", placeholder:"例) 太郎" %>
            </div>

            
            <div class="field">
              <%= f.label :name_kana, "名前フリガナ(全角)" %><br />
              <%= f.text_field :last_name_kana,  id:"last-name-kana", placeholder:"例) オノ" %>
              <%= f.text_field :first_name_kana,  id:"first-name-kana", placeholder:"例) タロウ" %>
            </div>

            <div class="field">
              <%= f.label :birthday, "生年月日" %><br />
              <div class='input-birth-wrap'>
                <%= raw sprintf(
                      f.date_select(
                        :birthday,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
              </div>
            </div>

            <div class="field">
              <%= f.label :age, "年齢" %><br />
              <%= f.collection_select( :age_id, Age.all, :id, :name, {}, {class:"select-box", id:"age"}) %>
            </div>

            <div class="field">
              <%= f.label :gender, "性別" %><br />
              <%= f.collection_select( :gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"gender"}) %>
            </div>

            <div class="field">
            <p>お住まい</p>
            <%= f.label :prefecture, "・都道府県" %><br />
              <%= f.collection_select( :prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
              <p><%= f.label :city, "・住所" %><br /></p>
              <%= f.text_area :city, id:"city", class:"ar-box", placeholder:"任意で記入。[注意] 市町村まで！記載された情報はプロフィール画面に反映されます！"%>
            </div>

            <div class="field">
              <%= f.label :profession, "職業" %><br />
              <%= f.collection_select( :profession_id, Profession.all, :id, :name, {}, {class:"select-box", id:"profession"}) %>
            </div>

            <div class="field">
              <%= f.label :self_introduction, "自己紹介" %><br />
              <%= f.text_area :self_introduction, id:"self_introduction", class:"ar-box", placeholder:"好きなアーティスト等ご自由に！"%>
            </div>
            
            
            <div class="actions">
              <%= f.submit "新規登録", class: :form__btn  %>
            </div>

          <% end %>
    </div>
  </div>
</div>
