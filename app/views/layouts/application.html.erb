<!DOCTYPE html>
<html>
  <head>
    <title>ComeTogether</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="header">
       <div class="inner">
          <div class="title">
            <%= link_to image_tag("CT_logo.png", class: :logo), root_path %> 
          </div>

          <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |f| %>
          <%= f.text_field :keyword, placeholder: "投稿を探す!", class: "input-box" %>
            <button class="search-button">
              <%= image_tag "search.jpg", class:"search-icon" %>
            </button>
          <% end %>

          <% if user_signed_in? %>
                <div class="nav__right">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: :nav__logout %>
                </div>
          <% else %>
                <div class="nav__right">
                  <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
                  <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %> 
                </div>
            <% end %>  
       </div>
    </header>

    <%= yield %>

    <footer class="footer">
      <p class="copyright">Copyright © Come Together All rights reserved.</p>
    </footer>
 
  </body>
</html>
