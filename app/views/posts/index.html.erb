<div class="wrapper">
  <div class="chat">
    <% if user_signed_in? %>
      <div class="greeting"> 
        ようこそ！<%= link_to "#{current_user.nickname}", user_path(current_user), class: :greeting__link%> さん
      </div> 
      <% else %>
      <div class="greeting"> 
        ようこそ！ Come Together へ！！
      </div> 
    <% end %>
    <div class="card__wrapper">
      <%= render partial: 'post', collection: @posts %>
    </div>
    <%= link_to( new_post_path, class: 'post-btn') do %>
        <span class='post-btn-text'>♪投稿する♪</span>
    <% end %>
  </div>
  <div class="side-bar">
   <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |f| %>
          <%= f.text_field :keyword, placeholder: "投稿を探す!", class: "input-box" %>
            <button class="search-button">
              <%= image_tag "search.jpg", class:"search-icon" %>
            </button>
          <% end %>

       </div>
  </div>
</div>

