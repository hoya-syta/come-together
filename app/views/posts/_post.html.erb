<div class="card">
  <%= link_to image_tag(post.image, class: :card__img ), post_path(post), method: :get %>
  <div class="card__body">
    <%= link_to post.title, post_path(post), method: :get, class: :card__title%>
    <p class="card__summary">
      <%= post.detail %>
    </p>
    <%= link_to "by #{post.user.nickname}", user_path(post.user), class: :card__user %>
  </div>
</div>