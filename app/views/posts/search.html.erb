<div class="wrapper">
  <div class="chat">
   <%= form_with(url: search_posts_path, local: true, method: :get) do |form| %><% end %>
  <div class="greeting"> 
        検索結果
      </div> 
        <div class="card__wrapper">
          <% @posts.each do |post| %>
            <%= render partial: "post", locals: { post: post } %>
          <% end %>
        </div>
        <%= link_to( new_post_path, class: 'post-btn') do %>
        <span class='post-btn-text'>♪投稿する♪</span>
        <% end %>
  </div>
      <div class="side-bar">
      <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |f| %>
          <%= f.text_field :keyword, placeholder: "投稿を探す!", class: "input-box" %>
            <button class="search-button">
              <%= image_tag "search.jpg", class:"search-icon" %>
            </button>
          <% end %>
      </div>
</div>



